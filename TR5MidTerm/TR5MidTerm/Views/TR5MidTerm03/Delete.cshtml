@using TR5MidTerm.Models.TR5MidTermViewModels

@model 商品檔DisplayViewModel

@{
    ViewData["Title"] = "刪除商品資料";
}

<h1 class="mt-2 text-danger">@ViewData["Title"]</h1>

<h3 class="text-warning">請確認是否刪除此筆商品資料？</h3>

<div>
    @* 錯誤訊息區塊 *@
    <div id="ModelErrorDiv" class="validation-summary-valid text-danger">
        <ul></ul>
    </div>
    <div class="text-danger">
        @Html.ValidationSummary(excludePropertyErrors: true, message: "", htmlAttributes: new { @class = "text-danger" })
    </div>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.事業顯示)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.事業顯示)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.單位顯示)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.單位顯示)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.部門顯示)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.部門顯示)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.分部顯示)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.分部顯示)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.商品編號)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.商品編號)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.商品名稱)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.商品名稱)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.商品類別編號)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.商品類別編號)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.商品類別)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.商品類別)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.物件編號)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.物件編號)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.單價)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.單價)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.修改人)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.修改人)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.修改時間)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.修改時間)</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        @Html.AntiForgeryToken()

        @* 主鍵與必要欄位：隱藏傳遞 *@
        @Html.HiddenFor(m => m.事業)
        @Html.HiddenFor(m => m.單位)
        @Html.HiddenFor(m => m.部門)
        @Html.HiddenFor(m => m.分部)
        @Html.HiddenFor(m => m.商品編號)
        @*@Html.HiddenFor(m => m.商品類別編號)*@

        <div class="form-group">
            <input type="submit" value="確認刪除" class="btn btn-danger" />
            <a href="javascript:history.back()" class="btn btn-secondary">取消</a>
        </div>
    </form>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
