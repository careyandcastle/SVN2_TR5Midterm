@model TR5MidTerm.Models.TR5MidTermViewModels.收款明細檔CreateViewModel

@{
    ViewData["Title"] = "新增收款明細";
}

<h1 class="mt-2">@ViewData["Title"]</h1>

<div>
    <form asp-action="CreateDetail" method="post">
        @Html.AntiForgeryToken()

        <!-- 錯誤訊息 -->
        <div id="ModelErrorDiv" class="validation-summary-valid text-danger">
            <ul></ul>
        </div>

        <!-- ✅ 隱藏主鍵欄位（由主畫面傳入） -->
        @Html.HiddenFor(m => m.事業)
        @Html.HiddenFor(m => m.單位)
        @Html.HiddenFor(m => m.部門)
        @Html.HiddenFor(m => m.分部)
        @Html.HiddenFor(m => m.案號)

        <!-- ✅ 計租年月 -->
        <div class="form-group">
            <label asp-for="計租年月" class="control-label"></label>
            <input asp-for="計租年月" class="form-control" type="month" />
            <span asp-validation-for="計租年月" class="text-danger"></span>
        </div>

        <!-- ✅ 金額（不可輸入） -->
        <div class="form-group">
            <label asp-for="金額" class="control-label"></label>
            <input asp-for="金額" class="form-control" readonly />
            <span asp-validation-for="金額" class="text-danger"></span>
        </div>

        <!-- ✅ 儲存按鈕 -->
        <div class="form-group text-right mt-3">
            <button type="submit" class="btn btn-primary">儲存</button>
            <a href="javascript:history.back()" class="btn btn-secondary">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
